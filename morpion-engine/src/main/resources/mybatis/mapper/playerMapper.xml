<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ultramorpion.engine.mapper.PlayerMapper">
    <resultMap id="PlayerResultMap" type="com.ultramorpion.model.Player">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="mark" property="mark" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="findAllPlayer" resultMap="PlayerResultMap">
        SELECT id, name, mark FROM player;
    </select>
    <select id="findPlayer" resultMap="PlayerResultMap">
        SELECT id, name, mark FROM player WHERE id=#{playerId};
    </select>
</mapper>